<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#cccccc" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:start="1dp"
        android:end="1dp"> <!--设置只有底部有边框-->
        <shape>
            <solid android:color="#00ffffff" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
</layer-list>